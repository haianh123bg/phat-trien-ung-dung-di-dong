<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LicenseManagementActivity">

    <!-- Mục 1: Thông tin bằng lái xe máy -->
    <TextView
        android:id="@+id/motorbikeLicenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin bằng lái"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/motorbikeLicenseOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Anh/Chị: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/motorbikeLicenseTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/motorbikeLicenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bằng xe máy hiện tại: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/motorbikeLicenseOwner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/motorbikeLicenseExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hết hạn: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/motorbikeLicenseType"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Mục 2: Thông tin bằng lái ô tô -->
    <TextView
        android:id="@+id/carLicenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Thông tin bằng lái"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/motorbikeLicenseExpiry"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/carLicenseOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Anh/Chị: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/carLicenseTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/carLicenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bằng ô tô hiện tại: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/carLicenseOwner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/carLicenseExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hết hạn: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/carLicenseType"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nút Đăng ký -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Đăng ký"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/carLicenseExpiry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Nút Quay lại -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Quay lại"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
